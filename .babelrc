{
	"presets": [
    ["env", {"targets": { "node": 6 }, "useBuiltIns": true }],
    "stage-0",
    "react"
  ],
  "plugins": ["transform-decorators-legacy", "syntax-async-functions", "add-module-exports"],
  "env": {
    "production": {
      "presets": ["react-optimize"],
      "plugins": ["babel-plugin-dev-expression"]
    },
    "development": {
			"plugins": ["tcomb"],
      "presets": ["react-hmre"]
    },
    "test": {
      "plugins": [
        ["webpack-loaders", { "config": "webpack.config.test.js", "verbose": false }]
      ]
    }
  }
}
